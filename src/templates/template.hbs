{{#if list}}
	{{#each list}}
		<li class="review__item">
			<div class="review__item-title">
				<span class="review__item-author">{{name}}</span>
				<span class="review__item-place">{{place}}</span>
				<span class="review__item-date">{{date}}</span>
			</div>
			<div class="review__item-content">
				{{review}}
			</div>
		</li>
	{{/each}}
{{else}}
	<li class="review__item">
		<div class="review__item-content">
			Отзывов нет..
		</div>
	</li>
{{/if}}